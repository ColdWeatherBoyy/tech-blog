<div>
	<section class="card">
		<a href="/blogposts/{{id}}">
			<header class="centered"><strong>{{title}}</strong></header>
			<div class="blog-info mt-2 mx-1">
				<span class="left">By {{user.name}} </span>
				<span class="right">Posted on: {{format_date created_at}}</span>
			</div>
			<p class="card-body mt-4">{{post}}</p>
		</a>
	</section>
</div>